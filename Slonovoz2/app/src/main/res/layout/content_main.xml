<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/scrollView1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="bigi.slonovoz.MainActivity"
    tools:showIn="@layout/activity_main"
    android:scrollbars="none"
    android:orientation="vertical"
    android:background="#d9ecf0">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <android.support.v7.widget.CardView
                xmlns:card_view="http://schemas.android.com/apk/res-auto"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                card_view:cardElevation="6dp">

            <fragment
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:name="bigi.slonovoz.menu.Fragmentraszenki"
                android:id="@+id/fragment"
                tools:layout="@layout/fragment_blank"
                android:layout_gravity="right|bottom" />
            </android.support.v7.widget.CardView>
        </FrameLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Space
                android:layout_width="match_parent"
                android:layout_height="6dp" />
        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <android.support.v7.widget.CardView
                xmlns:card_view="http://schemas.android.com/apk/res-auto"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                card_view:cardElevation="6dp"
                android:layout_toLeftOf="@+id/space2"
                android:layout_toStartOf="@+id/space2">
            <fragment
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:name="bigi.slonovoz.menu.Fragmentocnov"
                android:id="@+id/fragment2"
                android:layout_gravity="left|top"
                tools:layout="@layout/fragmentocnov"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_toStartOf="@+id/space2"
                android:layout_toLeftOf="@+id/space2" />
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                xmlns:card_view="http://schemas.android.com/apk/res-auto"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                card_view:cardElevation="6dp"
                android:layout_toRightOf="@+id/space2"
                android:layout_toEndOf="@+id/space2">
            <fragment
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:name="bigi.slonovoz.menu.FragmentMany"
                android:id="@+id/fragment3"
                android:layout_gravity="right|top"
                tools:layout="@layout/fragment_fragment_many"
                android:layout_alignParentTop="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_toEndOf="@+id/space2"
                android:layout_toRightOf="@+id/space2" />
            </android.support.v7.widget.CardView>

            <Space
                android:layout_width="6dp"
                android:layout_height="match_parent"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:id="@+id/space2" />

        </RelativeLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Space
                android:layout_width="match_parent"
                android:layout_height="6dp" />
        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <android.support.v7.widget.CardView
                xmlns:card_view="http://schemas.android.com/apk/res-auto"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                card_view:cardElevation="6dp"
                android:layout_gravity="right|top"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_toLeftOf="@+id/space3"
                android:layout_toStartOf="@+id/space3">
            <fragment
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:name="bigi.slonovoz.menu.FragmentGalerea"
                android:id="@+id/fragment4"
                tools:layout="@layout/fragment_fragment_galerea"
                android:layout_toLeftOf="@+id/space3"
                android:layout_toStartOf="@+id/space3" />
            </android.support.v7.widget.CardView>
            <android.support.v7.widget.CardView
                xmlns:card_view="http://schemas.android.com/apk/res-auto"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                card_view:cardElevation="6dp"
                android:layout_toRightOf="@+id/space3"
                android:layout_toEndOf="@+id/space3">
            <fragment
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:name="bigi.slonovoz.menu.FragmentOtzov"
                android:id="@+id/fragment5"
                android:layout_alignParentTop="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                tools:layout="@layout/fragment_fragment_otzov"
                android:layout_toRightOf="@+id/space3"
                android:layout_toEndOf="@+id/space3" />
            </android.support.v7.widget.CardView>

            <Space
                android:layout_width="6dp"
                android:layout_height="match_parent"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:id="@+id/space3" />
        </RelativeLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Space
                android:layout_width="match_parent"
                android:layout_height="50dp" />
        </LinearLayout>

    </LinearLayout>
</ScrollView>